# open terminal
# cmd - return : emacs "~"



# open chrome
# cmd + shift - return : open -n -a "Arc"

# moves focus between windows in the current focused display
alt + cmd  - h : /opt/homebrew/bin/yabai -m window --focus west
alt + cmd  - j : /opt/homebrew/bin/yabai -m window --focus south
alt + cmd  - k : /opt/homebrew/bin/yabai -m window --focus north
alt + cmd  - l : /opt/homebrew/bin/yabai -m window --focus east

# moves focus between spaces
alt - 1 : /opt/homebrew/bin/yabai -m space --focus 1
alt - 2 : /opt/homebrew/bin/yabai -m space --focus 2
alt - 3 : /opt/homebrew/bin/yabai -m space --focus 3
alt - 4 : /opt/homebrew/bin/yabai -m space --focus 4
alt - 5 : /opt/homebrew/bin/yabai -m space --focus 5
alt - 6 : /opt/homebrew/bin/yabai -m space --focus 6
alt - 7 : /opt/homebrew/bin/yabai -m space --focus 7
alt - 8 : /opt/homebrew/bin/yabai -m space --focus 8
alt - 9 : /opt/homebrew/bin/yabai -m space --focus 9
alt - 0  : /opt/homebrew/bin/yabai -m space --focus 10
shift + alt - m : /opt/homebrew/bin/yabai -m space --focus last
#shift + alt - p : /opt/homebrew/bin/yabai -m space --focus prev
#shift + alt - n : /opt/homebrew/bin/yabai -m space --focus next
# Move focused workspace to next display
shift + alt - n : /opt/homebrew/bin/yabai -m space --display next

# Move focused workspace to previous display
shift + alt - p : /opt/homebrew/bin/yabai -m space --display prev

# toggle window split type
cmd + alt - e : /opt/homebrew/bin/yabai -m window --toggle split

# rotate tree
cmd + alt - r : /opt/homebrew/bin/yabai -m space --rotate 90

# mirror tree y-axis
cmd + alt - y : /opt/homebrew/bin/yabai -m space --mirror y-axis

# toggle desktop offset
cmd + alt - a : /opt/homebrew/bin/yabai -m space --toggle padding; /opt/homebrew/bin/yabai -m space --toggle gap

# toggle window parent zoom
# alt - d : /opt/homebrew/bin/yabai -m window --focus mouse && \
#           /opt/homebrew/bin/yabai -m window --toggle zoom-parent
# 
cmd + alt - d : /opt/homebrew/bin/yabai -m space --destroy
# float / unfloat window and center on screen
cmd + alt - t : /opt/homebrew/bin/yabai -m window --toggle float;\
          /opt/homebrew/bin/yabai -m window --grid 4:4:1:1:2:2

# toggle window fullscreen zoom
shift + alt + cmd  - f : /opt/homebrew/bin/yabai -m window --focus mouse && \
        /opt/homebrew/bin/yabai -m window --toggle windowed-fullscreen


# toggle window native fullscreen
# shift + alt - f : /opt/homebrew/bin/yabai -m window --toggle native-fullscreen

# increase gap in focused space
# alt - g : /opt/homebrew/bin/yabai -m space --gap rel:10

# decrease gap in focused space
shift + alt - g : /opt/homebrew/bin/yabai -m space --gap rel:-10

# create a new space and follow focus
alt + cmd - n : /opt/homebrew/bin/yabai -m space --create && \
                  index="$(/opt/homebrew/bin/yabai -m query --displays --display | /opt/homebrew/bin/jq '.spaces[-1]')" && \
                  /opt/homebrew/bin/yabai -m space --focus "${index}"

# create a new space, move window and follow focus
shift + alt + cmd  - n : /opt/homebrew/bin/yabai -m space --create && \
                  index="$(/opt/homebrew/bin/yabai -m query --displays --display | /opt/homebrew/bin/jq '.spaces[-1]')" && \
                  /opt/homebrew/bin/yabai -m window --space "${index}" && \
                  /opt/homebrew/bin/yabai -m space --focus "${index}"

# balance size of windows
shift + alt - 0 : /opt/homebrew/bin/yabai -m space --balance

# swap window
shift + alt - h : /opt/homebrew/bin/yabai -m window --swap west
shift + alt - j : /opt/homebrew/bin/yabai -m window --swap south
shift + alt - k : /opt/homebrew/bin/yabai -m window --swap north
shift + alt - l : /opt/homebrew/bin/yabai -m window --swap east

# move window
shift + alt + cmd - h : /opt/homebrew/bin/yabai -m window --warp west
shift + alt + cmd - j : /opt/homebrew/bin/yabai -m window --warp south
shift + alt + cmd - k : /opt/homebrew/bin/yabai -m window --warp north
shift + alt + cmd - l : /opt/homebrew/bin/yabai -m window --warp east

# send window to a space
shift + alt - 1 : /opt/homebrew/bin/yabai -m window --space 1
shift + alt - 2 : /opt/homebrew/bin/yabai -m window --space 2
shift + alt - 3 : /opt/homebrew/bin/yabai -m window --space 3
shift + alt - 4 : /opt/homebrew/bin/yabai -m window --space 4
shift + alt - 5 : /opt/homebrew/bin/yabai -m window --space 5
shift + alt - 6 : /opt/homebrew/bin/yabai -m window --space 6
shift + alt - 7 : /opt/homebrew/bin/yabai -m window --space 7
shift + alt - 8 : /opt/homebrew/bin/yabai -m window --space 8
shift + alt - 9 : /opt/homebrew/bin/yabai -m window --space 9
shift + alt - 0 : /opt/homebrew/bin/yabai -m window --space 10

# change layout of desktop
ctrl + alt + cmd  - d : /opt/homebrew/bin/yabai -m space --layout bsp
ctrl + alt + cmd - f : /opt/homebrew/bin/yabai -m space --layout float

# increase window size
ctrl + alt - h : /opt/homebrew/bin/yabai -m window --resize left:-40:0
ctrl + alt - j : /opt/homebrew/bin/yabai -m window --resize bottom:0:40
ctrl + alt - k : /opt/homebrew/bin/yabai -m window --resize top:0:-40
ctrl + alt - l : /opt/homebrew/bin/yabai -m window --resize right:40:0

# decrease window size
ctrl + alt + cmd - h : /opt/homebrew/bin/yabai -m window --resize left:40:0
ctrl + alt + cmd - j : /opt/homebrew/bin/yabai -m window --resize bottom:0:-40
ctrl + alt + cmd - k : /opt/homebrew/bin/yabai -m window --resize top:0:40
ctrl + alt + cmd - l : /opt/homebrew/bin/yabai -m window --resize right:-40:0

